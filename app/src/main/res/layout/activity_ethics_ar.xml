<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ethics_of_donating_blood"
    android:background="@drawable/guide_background"
    >

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amiri_bold"
        android:gravity="center"
        android:text="*اخلاقيات التبرع بالدم و نقل الدم*"
        android:textColor="#F6F0F0"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/amiri_bold"
        android:gravity="center"
        android:text="(وَمَنْ أَحْيَاهَا فَكَأَنَّمَا أَحْيَا النَّاسَ جَمِيعًا)"
        android:textColor="#74E78A"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


    <TextView
        android:layout_marginRight="4dp"
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="right"
        android:text="١- ان التبرع بالدم تحت جميع الظروف يجب ان
يكون بشكل طوعي وبدون مقابل وبعدم وجود اكراه او اجبار للمتبرع  "
        android:textColor="@color/light_font"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:layout_marginRight="4dp"
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="right"
        android:text="٢- ان لايكون الدافع النفعي و المادي هو أساس إنشاء و إدارة و توجيه خدمات نقل الدم ."
        android:textColor="@color/light_font"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:layout_marginRight="4dp"
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="right"
        android:text="٣- على المتبرع استيعاب و ادراك خطورة التبرع بدم ملوث للغير و الشعور بمسؤوليته/ مسؤوليتها الأخلاقية تجاه متلقي الدم . "
        android:textColor="@color/light_font"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tajawal_regular"
        android:paddingLeft="28dp"
        android:gravity="right"
        android:text="4- أن تتم عملية سحب الدم من المتلقي ونقله للمريض عن طريق كادر طبي مؤهل "
        android:textColor="@color/light_font"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="right"
        android:text="5-يعتبر التبرع بالدم من أشرف الأعمال الإنسانية في المجالين الاجتماعي والطب "
        android:textColor="@color/light_font"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="center"
        android:text="6- يعتبر نقل الدم خطوة حاسمة لإنقاذ الأرواح كل يوم "
        android:textColor="@color/light_font"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <TextView
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="right"
        android:text="7- إشعار المتبرع و المتلقي لالدم في حالة حدوث أذى لأي منهما جراء عملية نقل الدم"
        android:textColor="@color/light_font"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

</androidx.constraintlayout.widget.ConstraintLayout>